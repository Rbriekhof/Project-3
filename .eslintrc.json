{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    },
    "overrides": [
        {
            "files": [
                "*.test.js",
                "*.spec.js"
            ],
            "rules": {
                "no-unused-expressions": "off",
                "no-unused-vars": "off"
            }
        }
    ]
}